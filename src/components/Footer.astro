---
import React from 'react';
import {Icon} from 'astro-icon/components';
import {ContentBlock} from '@/components/ContentBlock.tsx';
import {type Lang, useTranslations} from '../i18n';

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale)
---

<footer class={'py-4 w-full bottom-0'}>
    <ContentBlock>
        <div class={'flex-1 flex flex-col gap-4 md:gap-8'}>
            <div class={'w-56'}>
                <Icon name={'ahipo_logo'} width={'200px'} height={'50px'}/>
            </div>

            <div class="flex-1 flex flex-col md:flex-row gap-8 md:justify-between">
                <div>
                    <p>{t('hero.title')}</p>
                    <p>{t('personal.name')}</p>
                    <p>{t('personal.address.street')}</p>
                    <p>{t('personal.address.city')}</p>
                </div>

                <div class="flex flex-col gap-4">
                    <p>{t('footer.socials.title')}</p>
                    <div class="flex gap-2">
                        <a href={'https://www.instagram.com/rechtsanwaeltin_ahipo/'} target="_blank" rel="noopener noreferrer">
                            <Icon name={'mdi:instagram'} size={50}/>
                        </a>

                        <a href={'https://www.xing.com/profile/Melanie_Ahipo'} target="_blank" rel="noopener noreferrer">
                            <Icon name={'mdi:xing'} size={50}/>
                        </a>
                    </div>
                </div>
            </div>

            <div class={'flex gap-4 text-sm'}>
                <a href={`/${locale}/imprint`}>{t('general.imprint')}</a>
                <div class={'inline-block w-0.5 self-stretch bg-corporate-main'}></div>
                <a href={`/${locale}/privacy`}>{t('general.privacy')}</a>
            </div>
        </div>
    </ContentBlock>
</footer>
