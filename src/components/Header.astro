---
import React from 'react';
import {type Lang, useTranslations} from '../i18n';
import {ContentBlock} from '@/components/ContentBlock.tsx'
import LanguageSwitch from '@/components/LanguageSwitch.astro'
import {Icon} from 'astro-icon/components';
import Button from './Button.astro'

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale)
---

<nav class={'w-full h-20 flex'}>
    <div class={'h-20 fixed w-full bg-corporate-light flex'}>
        <ContentBlock>
            <div class="w-full px-3 flex justify-between items-center">
                <a class={'w-80'} href={'/'}>
                    <Icon name={'ahipo_logo'} width={'250px'} height={'50px'}/>
                </a>

                <div class={'flex gap-4'}>
                    <LanguageSwitch/>
                    <Button text={t({de: 'Kontakt', en: 'Contact'})}/>
                </div>
            </div>
        </ContentBlock>
    </div>
</nav>
